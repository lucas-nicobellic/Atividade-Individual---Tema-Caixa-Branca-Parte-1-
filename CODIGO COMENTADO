package login;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

public class User {

    //* Constantes de conexão *//
    private static final String URL = "jdbc:mysql://127.0.0.1/test";
    private static final String USER = "lopes";
    private static final String PASSWORD = "123";



/* Método para conectar ao banco de dados*/
  public Connection conectarBD() {
      try {
          Class.forName("com.mysql.cj.jdbc.Driver");
          return DriverManager.getConnection(URL, USER, PASSWORD);

        } catch (Exception e) {
            System.out.println("Erro ao conectar ao banco: " + e.getMessage());
            return null;
        }
    }

    /

/*Verifica se o usuário existe no banco
*@param login login do usuário
*@param senha senha do usuário
@return true se existir, false se não */

public boolean verificarUsuario(String login, String senha) {

        String sql = "SELECT nome FROM usuarios WHERE login = ? AND senha = ?";

        // try-with-resources: fecha automaticamente Connection, PreparedStatement e ResultSet
        try (Connection conn = conectarBD();
             PreparedStatement ps = conn.prepareStatement(sql)) {

            if (conn == null) { // evita NullPointer
                return false;
            }

            ps.setString(1, login);
            ps.setString(2, senha);

            try (ResultSet rs = ps.executeQuery()) {
                if (rs.next()) {
                    String nome = rs.getString("nome");
                    System.out.println("Usuário encontrado: " + nome);
                    return true;
                }
            }

        } catch (Exception e) {
            System.out.println("Erro ao consultar usuário: " + e.getMessage());
        }

        return false;
    }
}
